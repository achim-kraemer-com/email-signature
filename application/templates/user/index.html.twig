{% extends 'base.html.twig' %}

{% block title %}Benutzer{% endblock %}

{% block body %}
    <div class="container">
        <h1>Benutzer</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Passwort</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td> <a href="{{ path('app_user_edit', {'id': user.id}) }}">{{ user.email }}</a></td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a role="button" href="{{ path('app_user_new') }}">Neuen Benutzer erstellen</a>
    </div>
{% endblock %}
