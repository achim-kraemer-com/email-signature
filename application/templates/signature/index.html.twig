{% extends 'base.html.twig' %}

{% block title %}Signatur{% endblock %}

{% block body %}
    <h1>Signatur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>SignatureName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for signature in signatures %}
            <tr>
                <td>{{ signature.signatureName }}</td>
                <td>
                    <a role="button" href="{{ path('app_signature_show', {'id': signature.id}) }}">show</a>
                    <a role="button" href="{{ path('app_signature_edit', {'id': signature.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="25">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a role="button" class="btn-left" href="{{ path('app_signature_new') }}">Neue Signatur erstellen</a>
{% endblock %}
